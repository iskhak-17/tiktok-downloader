{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "es2022",
    "lib": ["es2022"],
    "types": ["node"],

    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules"]
}
